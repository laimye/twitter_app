<div class="container"
<p id="notice"><%= notice %></p>

		<div class="panel panel-info">
		<div class="panel-heading">
		  <div class="panel-title pull-left"><strong>@<%= @tweet.handle %></strong></div>
		  <div class="panel-title pull-right"><%= @tweet.updated_at.localtime.strftime('%d %b %Y at %l:%M:%S')%></div>
		</div>
		  <div class="panel-body">
		    <%= @tweet.content %>
		  </div>
		</div>

<%= link_to "Back", tweets_path %>  | 
<%= link_to "Edit", edit_tweet_path(@tweet) %>  | 
<%= link_to "Delete", tweet_path, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} %>
</div>

